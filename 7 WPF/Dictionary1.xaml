<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:col="clr-namespace:System.Collections;assembly=mscorlib">
    <col:ArrayList x:Key="FontName">
        <system:String>Times New Roman</system:String>
        <system:String>Calibri</system:String>
        <system:String>Calibri Light</system:String>
        <system:String>Arial</system:String>
        <system:String>Arial Black</system:String>
        <system:String>Arial Narrow</system:String>
    </col:ArrayList>
    <col:ArrayList x:Key="FontSize">
        <system:String>6</system:String>
        <system:String>12</system:String>
        <system:String>14</system:String>
        <system:String>16</system:String>
        <system:String>18</system:String>
        <system:String>20</system:String>
    </col:ArrayList>
</ResourceDictionary>